# darrot Configuration File (YAML)
# 
# This is an example configuration file for the darrot Discord TTS bot.
# Copy this file to darrot.yaml and customize the values for your setup.
#
# Configuration precedence (highest to lowest):
# 1. CLI flags (--discord-token, --log-level, etc.)
# 2. Environment variables (DRT_DISCORD_TOKEN, DRT_LOG_LEVEL, etc.)
# 3. Configuration file (this file)
# 4. Default values

# Discord Configuration
# Required: Your Discord bot token from the Developer Portal
discord_token: "your_discord_bot_token_here"

# Logging Configuration
# Options: DEBUG, INFO, WARN, ERROR
# Default: INFO
log_level: "INFO"

# Google Cloud Text-to-Speech Configuration (Optional)
# If not provided, the bot will use basic TTS functionality
google_cloud_credentials_path: "/path/to/your/google-cloud-credentials.json"

# TTS Configuration
tts:
  # Default voice for text-to-speech
  # Examples: en-US-Standard-A, en-US-Neural2-A, en-GB-Standard-B
  # Default: en-US-Standard-A
  default_voice: "en-US-Standard-A"
  
  # Speech speed multiplier
  # Range: 0.25 to 4.0
  # Default: 1.0
  default_speed: 1.0
  
  # Speech volume multiplier
  # Range: 0.0 to 2.0
  # Default: 1.0
  default_volume: 1.0
  
  # Maximum number of messages in the TTS queue
  # Range: 1 to 100
  # Default: 10
  max_queue_size: 10
  
  # Maximum length of a single message for TTS processing
  # Range: 1 to 2000 characters
  # Default: 500
  max_message_length: 500

# CLI Configuration (Optional)
cli:
  # Enable colored output in terminal
  # Default: true
  enable_colors: true
  
  # Default shell for completion generation
  # Options: bash, zsh, powershell
  # Default: bash
  completion_shell: "bash"

# Example configurations for different environments:

# Development Environment
# log_level: "DEBUG"
# tts:
#   max_queue_size: 5
#   max_message_length: 200

# Production Environment
# log_level: "WARN"
# tts:
#   max_queue_size: 20
#   max_message_length: 1000

# High-Quality TTS with Google Cloud
# google_cloud_credentials_path: "/etc/darrot/gcp-credentials.json"
# tts:
#   default_voice: "en-US-Neural2-A"
#   default_speed: 1.1
#   default_volume: 0.9