# Container Environment Configuration
# Copy this file to .env for container deployment

# Required: Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Optional: Google Cloud TTS Credentials
# Mount your credentials.json file to /app/credentials/credentials.json
GOOGLE_CLOUD_CREDENTIALS_PATH=/app/credentials/credentials.json

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: TTS Configuration
TTS_DEFAULT_VOICE=en-US-Standard-A
TTS_DEFAULT_SPEED=1.0
TTS_DEFAULT_VOLUME=1.0
TTS_MAX_QUEUE_SIZE=10
TTS_MAX_MESSAGE_LENGTH=500